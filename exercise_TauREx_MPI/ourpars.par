[Global]
xsec_path = ../../atmosphere/xsecs
cia_path = ../../atmosphere/cia/hitran
mpi_use_shared = True

[Chemistry]
chemistry_type = taurex
fill_gases = H2,He
ratio = 0.25

    [[H2O]]
    gas_type = constant
    mix_ratio=1.1185e-4


[Temperature]
profile_type = isothermal
T = 1300

[Pressure]
profile_type = Simple
atm_min_pressure = 1e-0
atm_max_pressure = 1e6
nlayers = 100

[Planet]
planet_type = Simple
planet_mass = 1.170
planet_radius = 1.7420

[Star]
star_type = blackbody
star_temperature = 6628
star_radius = 1.461

[Model]
model_type = transmission

    [[Absorption]]

    [[CIA]]
    cia_pairs = H2-H2, H2-He,

    [[Rayleigh]]

[Observation]
taurex_spectrum = self
observed_spectrum = /home/zingales/Exoplanets/TOI-5398/exercise/quickstart.dat

[Optimizer]
num_live_points = 1000
optimizer = multinest
search_multi_modes = False
multi_nest_path = ./multinest

[Fitting]
planet_radius:fit = True
planet_radius:bounds = 0.3, 2

T:fit = True
T:bounds = 300, 2000

H2O:fit = True
H2O:bounds = 1e-12, 1e-1
